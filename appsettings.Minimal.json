{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Error",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Monitoring": {
    "Enhanced": {
      "Enabled": true,
      "Metrics": {
        "EnableBasicMetrics": true,
        "EnableDetailedMetrics": false,
        "EnableSystemMetrics": false,
        "EnableHttpMetrics": false,
        "EnableCustomMetrics": false,
        "EndpointPath": "/metrics",
        "CollectionIntervalSeconds": 60
      },
      "HealthChecks": {
        "Enabled": true,
        "EndpointPath": "/health",
        "IntervalSeconds": 60,
        "EnableDetailedResponses": false,
        "TimeoutSeconds": 15
      },
      "Dashboards": {
        "Enabled": false,
        "EnableBasicDashboard": false,
        "EnablePerformanceDashboard": false,
        "EnableSystemDashboard": false,
        "RefreshIntervalSeconds": 60
      },
      "Alerting": {
        "Enabled": false,
        "EnableJobFailureAlerts": false,
        "EnableHealthCheckAlerts": false,
        "EnablePerformanceAlerts": false,
        "EnableSystemResourceAlerts": false,
        "JobFailureThreshold": 10,
        "HealthCheckFailureThreshold": 5,
        "PerformanceThresholdMs": 10000
      },
      "Performance": {
        "Enabled": false,
        "EnableDurationTracking": false,
        "EnableMemoryTracking": false,
        "EnableCpuTracking": false,
        "EnableGcTracking": false,
        "SamplingRate": 0.1,
        "RetentionDays": 7
      }
    }
  }
}
