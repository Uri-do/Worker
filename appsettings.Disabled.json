{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Monitoring": {
    "Enhanced": {
      "Enabled": false,
      "Metrics": {
        "EnableBasicMetrics": false,
        "EnableDetailedMetrics": false,
        "EnableSystemMetrics": false,
        "EnableHttpMetrics": false,
        "EnableCustomMetrics": false,
        "EndpointPath": "/metrics",
        "CollectionIntervalSeconds": 300
      },
      "HealthChecks": {
        "Enabled": false,
        "EndpointPath": "/health",
        "IntervalSeconds": 300,
        "EnableDetailedResponses": false,
        "TimeoutSeconds": 10
      },
      "Dashboards": {
        "Enabled": false,
        "EnableBasicDashboard": false,
        "EnablePerformanceDashboard": false,
        "EnableSystemDashboard": false,
        "RefreshIntervalSeconds": 300
      },
      "Alerting": {
        "Enabled": false,
        "EnableJobFailureAlerts": false,
        "EnableHealthCheckAlerts": false,
        "EnablePerformanceAlerts": false,
        "EnableSystemResourceAlerts": false,
        "JobFailureThreshold": 50,
        "HealthCheckFailureThreshold": 10,
        "PerformanceThresholdMs": 30000
      },
      "Performance": {
        "Enabled": false,
        "EnableDurationTracking": false,
        "EnableMemoryTracking": false,
        "EnableCpuTracking": false,
        "EnableGcTracking": false,
        "SamplingRate": 0.0,
        "RetentionDays": 1
      }
    }
  }
}
