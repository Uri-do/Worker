{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Quartz": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId", "WithEnvironmentName"]
  },
  "Monitoring": {
    "DefaultTimeoutSeconds": 30,
    "Endpoints": [
      {
        "Name": "HealthCheck",
        "Url": "https://api.example.com/health",
        "TimeoutSeconds": 10
      },
      {
        "Name": "Database",
        "Url": "https://api.example.com/db/status",
        "TimeoutSeconds": 15
      }
    ]
  },
  "Quartz": {
    "CronSchedule": "0 0/1 * * * ?"
  },
  "Authentication": {
    "Enabled": true,
    "Jwt": {
      "SecretKey": "your-super-secret-jwt-key-that-is-at-least-32-characters-long",
      "Issuer": "MonitoringWorker",
      "Audience": "MonitoringWorker",
      "ExpirationMinutes": 60,
      "ClockSkewMinutes": 5
    },
    "Users": {
      "DefaultUsers": [
        {
          "Id": "admin-001",
          "Username": "admin",
          "Password": "admin123",
          "Roles": ["Admin"],
          "Enabled": true
        },
        {
          "Id": "operator-001",
          "Username": "operator",
          "Password": "operator123",
          "Roles": ["Operator"],
          "Enabled": true
        },
        {
          "Id": "viewer-001",
          "Username": "viewer",
          "Password": "viewer123",
          "Roles": ["Viewer"],
          "Enabled": true
        }
      ]
    }
  },
  "DatabaseMonitoring": {
    "Enabled": true,
    "DefaultConnectionTimeoutSeconds": 30,
    "DefaultCommandTimeoutSeconds": 30,
    "MaxConcurrentConnections": 10,
    "Connections": [
      {
        "Name": "LocalDB",
        "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=MonitoringTest;Trusted_Connection=true;",
        "Provider": "SqlServer",
        "Environment": "Development",
        "Enabled": true,
        "Tags": ["local", "test"],
        "QueryNames": ["BasicHealthCheck"]
      }
    ],
    "Queries": [
      {
        "Name": "BasicHealthCheck",
        "Sql": "SELECT 1 as HealthCheck",
        "Description": "Basic health check query",
        "Type": "HealthCheck",
        "ResultType": "Scalar",
        "ExpectedValue": 1,
        "ComparisonOperator": "Equals",
        "Enabled": true
      },
      {
        "Name": "DatabaseSize",
        "Sql": "SELECT SUM(size) * 8 / 1024 as SizeMB FROM sys.database_files",
        "Description": "Database size in MB",
        "Type": "Performance",
        "ResultType": "Scalar",
        "WarningThreshold": 1000,
        "CriticalThreshold": 5000,
        "Enabled": true
      }
    ]
  },
  "AllowedHosts": "*"
}
